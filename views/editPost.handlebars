<div class="post-card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form class="card-body" id="edit-form">
        <input type="hidden" id="post-id" value="{{post.id}}">

        <label class="form-label" for="post-title">Title</label>
        <input type="text" id="post-title" value="{{post.title}}" class="form-input">

        <label class="form-label" for="post-body">Blog Post Content</label>
        <textarea id="post-body" class="form-input">{{post.body}}</textarea>

        <button type="submit" class="button">Update</button>
        <button type="button" id="delete-button" class="button">Delete</button>
    </form>
</div>